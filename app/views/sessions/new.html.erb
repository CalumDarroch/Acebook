<body class="login-body">
  <div class="login-card">
    <div class="login-header">Log in</div>

      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= form_for :session do |form| %>

        <div class="login-body__message">
          <div class="hidden"><%= form.label :email %></div>
          <%= form.text_field :email, placeholder: "email"  %>
        </div>
        <div class="login-body__message">
          <div class="hidden"><%= form.label :password %></div>
          <%= form.text_field :password, placeholder: "password",type: "password"  %>
        </div>
        <div class="login-body__submit">
          <%= form.submit "Submit" %>
        </div>
      <% end %>

  </div>
</body>
