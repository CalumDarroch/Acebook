<body class="header">
  <div class="header">
    <h1>Acebook</h1>
    <%= link_to new_user_path do %>
      <h4>Sign up</h4>
    <% end %>
  </div>
</body>


<body class="login-body">
  <div class="login-card">
    <div class="login-header">Log in</div>

      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= form_for :session do |form| %>

        <div class="login-body__message">
          <div class="hidden"><%= form.label :email %></div>
          <%= form.text_field :email, placeholder: "email", required: true  %>
        </div>
        <div class="login-body__message">
          <div class="hidden"><%= form.label :password %></div>
          <%= form.text_field :password, placeholder: "password", required: true  %>
        </div>
        <div class="login-body__submit">
          <%= form.submit "Submit" %>
        </div>
      <% end %>

  </div>
</body>
