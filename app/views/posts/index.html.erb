  <h1>Acebook</h1>
  </div>
  <div class="nav-right">
  <h3>Welcome back <%= current_user.first_name.capitalize %>!</h3>
  <% if logged_in? %>
    <h4><%= link_to 'Log out', logout_path,
    method: :delete,
    data: { confirm: 'Are you sure?' } %></h4>
  <% else %>
