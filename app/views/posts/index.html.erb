<% @posts.reverse.each do |post| %>
  <p><%= post.message %></p>
  <p><%= post.created_at %></p>
  <p><%= link_to 'Destroy', post_path(post),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to 'Update', edit_post_path(post),
    method: :update %></p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
