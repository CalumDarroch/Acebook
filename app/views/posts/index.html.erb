<body class="posts-body">
  <header>
    <br>
    <%= link_to new_post_path do %>
      <h4>New post</h4>
    <% end %>
    <br>
</<header>
<br>

  <% @posts.sort_by(&:created_at).reverse.each do |post| %>

    <div class="post-card">
      <p><%= h(post.message).gsub(/\n/, '<br/>').html_safe %></p>
      <h5><p><%= post.created_at.strftime("%d-%m-%Y")%>
      at <%= post.created_at.strftime("%I:%M %p")%></p></h5>
      <p><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Edit', edit_post_path(post) %></p>
    </div>

  <br>
  <% end %>
</body>
